{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
    <h1>Stwórz raport</h1>
    {% if error is defined %}
        <div class="alert alert-danger">
       {% if error == 1 %}
           <strong>Raport instnieje dla wybranej daty.</strong>
       {% elseif error == 2 %}
           <strong>Niepoprawny czas pracy.</strong>
       {% elseif error == 3 %}
           <strong>Wybrano sobotę lub niedzielę.</strong>
       {% elseif error == 4 %}
           <strong>Wybrano dzień wolny.</strong>
       {% endif %}
        </div>
    {% endif %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input class="btn btn-success" type="submit" value="Stwórz raport" />
    {{ form_end(form) }}

    <br><br>
    <a class="btn btn-primary" href="{{ path('dayreport_mysheet') }}">powrót do listy</a>

{% endblock %}
