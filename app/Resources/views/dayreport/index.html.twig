{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dayreports list
        {% if username is defined %}
        {{ username }}
        {% endif %}
    </h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Userid</th>
                    <th>Canedit</th>
                {% endif %}
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dayReport in dayReports %}
            <tr>
                <td>{% if dayReport.date %}{{ dayReport.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if dayReport.start %}{{ dayReport.start|date('H:i:s') }}{% endif %}</td>
                <td>{% if dayReport.end %}{{ dayReport.end|date('H:i:s') }}{% endif %}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>{{ dayReport.userId }}</td>
                    <td>{% if dayReport.canEdit %}Yes{% else %}No{% endif %}</td>
                {% endif %}
                <td>{{ dayReport.comment }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('dayreport_show', { 'id': dayReport.id }) }}">show</a>
                    <a class="btn btn-info" href="{{ path('dayreport_edit', { 'id': dayReport.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('dayreport_new') }}">Create a new dayReport</a>

{% endblock %}
