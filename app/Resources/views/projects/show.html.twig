{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ project.name }}</h1>

    <table class="table table-bordered" style="width:30%">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Klient</th>
                <td>{{ project.client }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Czas przeznaczony na projekt:</h2>
    <table class="table table-bordered" style="width:50%">
        <thead>
        <tr>
            <th>Data</th>
            <th>Czas(h)</th>
            <th>Pracownik</th>
        </tr>
        </thead>
        <tbody>
        {% set hours = 0 %}
        {% for report in timereports %}
        <tr>
            <td>{{ report.date|date('Y-m-d') }}</td>
            <td>{{ report.time|date('H:i') }}</td>
            <td>{{ report.user }}</td>
            {% set hours = hours + report.time|date('H:i') %}
        </tr>
        {% endfor %}
        <tr>
            <td></td>
            <td><b>Suma: {{ hours }}h</b></td>
            <td></td>
        </tr>
        </tbody>
    </table>


